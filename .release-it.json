{
  "git": {
    "commitMessage": ":bookmark: chore: release v${version}"
  },
  "github": {
    "release": true,
    "skipChecks": true,
    "tagName": "v${version}"
  },
  "plugins": {
    "release-it-yarn-workspaces": {
      "workspaces": ["packages/*", "packages/config/*"],
      "publish": true,
      "skipChecks": true
    }
  },
  "npm": false
}
