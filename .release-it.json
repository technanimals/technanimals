{
  "git": {
    "commitMessage": ":bookmark: chore: release v${version}"
  },
  "github": {
    "release": false,
    "skipChecks": true,
    "tagName": "v${version}"
  },
  "plugins": {
    "release-it-yarn-workspaces": {
      "workspaces": [
        "packages/*",
        "packages/config/*",
        "packages/paystack/*",
        "packages/paystack/core/*",
        "packages/paystack/core/resources/*"
      ],
      "publish": true,
      "skipChecks": true
    }
  },
  "npm": false
}
